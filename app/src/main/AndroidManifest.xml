<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ” PermissÃµes necessÃ¡rias -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_SCREENING" />

    <application
        android:allowBackup="true"
        android:label="Call Blocker"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- ðŸ“± Activity principal -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- ðŸ”’ ServiÃ§o de bloqueio de chamadas -->
        <service
            android:name=".service.CallBlockService"
            android:permission="android.permission.BIND_SCREENING_SERVICE"
            android:exported="true">

            <intent-filter>
                <action android:name="android.telecom.CallScreeningService" />
            </intent-filter>

        </service>

    </application>

</manifest>
