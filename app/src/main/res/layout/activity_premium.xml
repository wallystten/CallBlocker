<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#0E0E11">

    <TextView
        android:id="@+id/txtPremiumTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Premium"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/txtPremiumPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 9,90 / mÃªs"
        android:textSize="18sp"
        android:textColor="#CFC3FF"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/btnSubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assinar Premium"
        android:backgroundTint="#CFC3FF"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnWhatsappPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Falar com suporte no WhatsApp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginTop="24dp" />

</LinearLayout>
